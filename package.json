{
  "name": "@codefi/metafi",
  "version": "1.0.0",
  "description": "MetaFi Software Development Kit",
  "main": "index.ts",
  "author": "Consensys Software Inc.",
  "license": "MIT",
  "files": [],
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "yarn workspaces foreach --all --parallel run test --collectCoverage=false",
    "test:source": "yarn workspaces foreach --all --parallel run test --collectCoverage=false",
    "test:types": "yarn workspaces foreach --all --parallel run tscheck",
    "tscheck": "yarn workspaces foreach --all --parallel run tscheck",
    "coverage": "yarn test --coverage --passWithNoTests",
    "build": "yarn workspaces foreach --all --parallel --topological --verbose run build",
    "build:docs": "echo 'Docs build not configured yet'",
    "publish": "yarn workspaces foreach --all --no-private exec jf npm publish --tolerate-republish",
    "lint": "eslint . --ext js,ts",
    "lint:fix": "yarn lint --fix",
    "lint:changelog": "echo 'Changelog linting not configured yet'",
    "prettier": "prettier --check '**/*.{js,ts}' .",
    "prettier:fix": "prettier --write '**/*.{js,ts}' .",
    "coverage:combined": "node ./scripts/aggregate-pkg-coverage.js && nyc merge .nyc_output coverage/merged-coverage.json && nyc report -t coverage --report-dir coverage/lcov-report --reporter=html --reporter=cobertura",
    "tx-categorize": "yarn workspace @codefi/metafi-tx-categorize"
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn tscheck",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm test"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@babel/plugin-transform-modules-commonjs": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/eslint": "^8",
    "@types/jest": "^27.4.1",
    "@types/qs": "^6.9.15",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^28.8.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.3.0",
    "jest": "^29.7.0",
    "jest-junit": "^13.2.0",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^10.5.1",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.4.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.2"
  },
  "packageManager": "yarn@4.4.1",
  "resolutions": {
    "meow": "13.2.0",
    "secp256k1": "4.0.4",
    "elliptic": "6.6.1"
  }
}
